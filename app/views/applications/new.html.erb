<h1>New Application</h1>
<%= form_with url: "/applications/new", method: :post, local: true do |form| %>
  <p><%= form.label :name %></p>
  <p><%= form.text_field :name %></p>

  <p><%= form.label :street_address %></p>
  <p><%= form.text_field :street_address %></p>

  <p><%= form.label :city %></p>
  <p><%= form.text_field :city %></p>

  <p><%= form.label :state %></p>
  <p><%= form.text_field :state %></p>

  <p><%= form.label :zip_code %></p>
  <p><%= form.text_field :zip_code %></p>

  <p><%= form.label :why_would_you_make_a_good_home? %></p>
  <p><%= form.text_field :description %></p>

  <h3><%= form.submit %></h3>
  <% end %>